{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>

{{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" id="undevoured" checked> Undevoured!<br>
    <input type="radio" name="devoured" value="0" id="devoured"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>

